---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Message Sent - The Beach House LA">
	<main class="min-h-screen flex flex-col items-center justify-center text-center p-6">
		<h1 class="font-display text-6xl text-brand-orange mb-6">RECEIVED</h1>
		<p class="text-xl text-gray-300 mb-8 max-w-lg">
			Thanks for reaching out. We'll get back to you shortly.
		</p>
		<a href="/" class="px-8 py-3 bg-white text-black rounded-full font-bold hover:bg-gray-200 transition">
			Back to Studio
		</a>
	</main>
</Layout>
