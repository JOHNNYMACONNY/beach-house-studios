---
import siteData from '../data/site-data.json';
const { site_info } = siteData;

const navLinks = [
  { name: "Services", href: "#services" },
  { name: "Gear", href: "#gear" },
  { name: "Amenities", href: "#amenities" },
  { name: "About", href: "#about" },
];
---
<nav class="fixed top-0 w-full z-50 bg-[#0A0A0A]/80 backdrop-blur-md border-b border-white/5">
    <div class="max-w-7xl mx-auto px-6 h-20 flex items-center justify-between">
        <!-- Logo -->
        <a href="/" class="flex items-center gap-2 group">
             <!-- Placeholder for Logo if not present, otherwise img -->
             <img src="/branding/logo.svg" alt="The Beach House LA" class="h-10 w-auto group-hover:opacity-80 transition" onerror="this.style.display='none'; this.nextElementSibling.style.display='block'" />
             <span class="font-display text-xl text-white tracking-wide hidden" style="display: none;">THE BEACH HOUSE</span>
        </a>

        <!-- Desktop Links -->
        <div class="hidden md:flex items-center gap-8">
            {navLinks.map(link => (
                <a href={link.href} class="text-sm font-medium text-gray-400 hover:text-white transition tracking-wide uppercase">
                    {link.name}
                </a>
            ))}
        </div>

        <!-- CTA -->
        <div class="flex items-center gap-4">
            <a href={site_info.booking_url} class="hidden sm:block bg-white text-black px-5 py-2 rounded-full text-sm font-bold hover:bg-gray-200 transition">
                Book Session
            </a>
            <a href="#contact" class="sm:hidden text-white">
                Contact
            </a>
        </div>
    </div>
</nav>
