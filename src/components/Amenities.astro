---
import siteData from '../data/site-data.json';
import MindfulCard from './MindfulCard.astro';
const { amenities } = siteData.sections;
---
<section id="amenities" class="py-24 px-6 bg-[#0A0A0A]">
    <div class="max-w-7xl mx-auto">
        <div class="flex items-center justify-between mb-16">
            <h2 class="font-display text-4xl md:text-5xl text-white">STUDIO AMENITIES</h2>
            <div class="flex gap-2">
                <div class="w-2 h-2 rounded-full bg-indigo-500"></div>
                <div class="w-2 h-2 rounded-full bg-rose-500"></div>
            </div>
        </div>

        <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
            {amenities.map((amenity, index) => {
                // Square Harmony: Vibe Axis (Indigo & Rose)
                const isIndigo = index % 2 === 0;
                const color = isIndigo 
                    ? { bg: 'bg-indigo-900/10', border: 'border-indigo-500/20', text: 'text-indigo-200', icon: 'text-indigo-400' }
                    : { bg: 'bg-rose-900/10', border: 'border-rose-500/20', text: 'text-rose-200', icon: 'text-rose-400' };

                return (
                    <MindfulCard 
                        delay={`${index * 0.1}s`} 
                        class={`p-6 aspect-square flex flex-col items-center justify-center text-center gap-4 ${color.bg} ${color.border} group`}
                    >
                        <div class={`p-4 rounded-full bg-white/5 group-hover:bg-white/10 transition-colors ${color.icon}`}>
                            <svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 13l4 4L19 7" />
                            </svg>
                        </div>
                        <span class={`font-medium text-lg leading-tight ${color.text}`}>{amenity}</span>
                    </MindfulCard>
                );
            })}
        </div>
    </div>
</section>
